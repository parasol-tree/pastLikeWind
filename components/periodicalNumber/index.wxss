/* components/periodicalNumber/index.wxss */
.container {
  height: 60rpx;
  display: inline-flex;
}
  .periodicalNumber_Container {
    display: flex;
    align-items: baseline;
  }
    .no {
      font-size: 32rpx;
    }
    .periodicalNumber {
      font-size: 60rpx;
      line-height: 60rpx;
      font-weight: 800;
      margin-right: 14rpx;
    }
    .VerticalLine {
      height: 44rpx;
      margin-right: 14rpx;
      border-left: 1px solid #000;
    }
  .date_Container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-top: 5rpx;
  }
    .month {
      font-size: 24rpx;
      line-height: 24rpx;
    }
    .year {
      font-size: 20rpx;
      line-height: 20rpx;
    }
