/* components/book/index.wxss */
.container {
  width: 240rpx;
  height: 360rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  box-shadow: 2px 2px 3px #e3e3e3;
}
  .cover {
    width: 100%;
    height: 100%;
    border-radius: 2px;
  }
  .introduction {
    box-sizing: border-box;
    width: 240rpx;
    padding: 5rpx 10rpx 8rpx 15rpx;
    border-bottom-right-radius: 2px;
    border-bottom-left-radius: 2px;
    display: flex;
    flex-direction: column;
    position: absolute;
    left: 0;
    bottom: 0;
    font-size: 24rpx;
    color: #fff;
    background-color: rgba(0, 0, 0, .4);
  }
    .title {
      text-overflow: ellipsis;
      white-space: nowrap;
      overflow: hidden;
    }
    .author {
      font-size: 20rpx;
      color: #d7e4da;
      text-overflow: ellipsis;
      white-space: nowrap;
      overflow: hidden;
    }
    .likeCount {
      color: #d7e4da;
      text-align: right;
    }
