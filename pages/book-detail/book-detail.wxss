/* pages/book-detail/book-detail.wxss */
.bookDetailContainer {
  width: 100%;
  height: 100%;
  border-top: 1px solid #aaa;
  background-color: #f5f5f5;
}
  .bookCoverContainer {
    width: 100%;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
  }
    .cover {
      width: 200rpx;
      height: 300rpx;
      margin-top: 40rpx;
      box-shadow: 2px 2px 3px #e3e3e3;
    }
    .title {
      font-size: 38rpx;
      line-height: 38rpx;
      font-weight: 600;
      color: #2f2f2f;
      margin: 20rpx 0;
    }
    .author {
      font-size: 28rpx;
      line-height: 28rpx;
      color: #999;
    }
  .commentConatiner, .introduceContainer {
    width: 690rpx;
    margin: 30rpx 0;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
  }
    .commentTitle {
      margin-bottom: 20rpx;
      font-size: 30rpx;
      font-weight: 600;
      color: #2f2f2f;
    }
    .commentList {
      width: 100%;
      display: flex;
      flex-wrap: wrap;
    }
      .commentList wind-tag {
        margin-right: 15rpx;
        margin-bottom: 10rpx;
      }
      .commentList > wind-tag:nth-child(1) > view {
        background-color: #fffbdd;
      }
      .commentList > wind-tag:nth-child(2) > view {
        background-color: #eeffbf;
      }
        .tagSlot {
          margin-left: 10rpx;
          font-size: 22rpx;
          color: #aaa;
          background-color: #fffbdd;
        }
  .introduceContainer {}
    .introduce {
      font-size: 34rpx;
      line-height: 50rpx;
      font-weight: 500;
      text-indent: 68rpx;
    }
