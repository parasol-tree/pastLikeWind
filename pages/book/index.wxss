/* pages/book/index.wxss */
.bookContainer {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
}
  .bookHeader {
    width: 700rpx;
    height: 70rpx;
    margin: 15rpx 0;
    border-radius: 50rpx;
    box-shadow: 0 0 3px 0 #e3e3e3;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #aaa;
    background-color: #f5f5f5;
  }
    .searchImg {
      width: 14px;
      height: 14px;
      margin-right: 10px;
      margin-bottom: -2px;
    }
    .searchHintInfo {
      font-size: 30rpx;
    }
  .featuredResult {
    width: 100%;
    height: 70rpx;
    font-size: 34rpx;
    line-height: 70rpx;
    text-align: center;
    background-color: #f5f5f5;
  }
  .bookList {
    box-sizing: border-box;
    width: 100%;
    height: 90%;
    border-top: 1px solid #f5f5f5;
    padding: 0 90rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    overflow-x: hidden;
    overflow-y: scroll;
    background-color: #f5f5f5;
  }
